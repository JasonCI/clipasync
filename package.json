{
  "name": "clipasync",
  "description": "剪贴板同步",
  "version": "1.0.0",
  "private": true,
  "author": {
    "email": "jason_ci@icloud.com",
    "name": "Jason",
    "url": "https://tuu14.com"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production pnpm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "dev": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,vue",
    "robot": "electron-rebuild -f -w robotjs",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "pnpm run typecheck:main && pnpm run typecheck:preload && pnpm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,vue,json}\"",
    "build:win": "pnpm build && electron-builder --win --x64",
    "build:linux": "pnpm build && electron-builder --linux",
    "build:mac": "pnpm build && electron-builder --mac"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.10",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@vitejs/plugin-vue": "4.1.0",
    "cross-env": "7.0.3",
    "electron": "23.2.1",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "8.37.0",
    "eslint-plugin-vue": "9.10.0",
    "nano-staged": "0.8.0",
    "node-gyp-build": "^4.6.0",
    "sass": "^1.60.0",
    "simple-git-hooks": "2.8.1",
    "typescript": "5.0.3",
    "unplugin-auto-expose": "0.0.4",
    "vite": "4.2.1",
    "vue": "3.2.47",
    "vue-tsc": "1.2.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "electron-clipboard-ex": "^1.3.3",
    "electron-updater": "5.3.0",
    "nanoid": "^4.0.2",
    "node-gyp": "^9.3.1",
    "peerjs": "^1.4.7",
    "robotjs": "^0.6.0"
  }
}
